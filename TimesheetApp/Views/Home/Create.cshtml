@using Timesheet.Models
@model TimesheetApp.Models.TimesheetCreateModel
@{
    ViewData["Title"] = "Create";
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<p>Add a new Timesheet record here</p>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("CreateTimesheet", "Home", FormMethod.Post, new
        {
            @class = "form-horizontal",
            role =
                "form"
        }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" })
                <div id="datepicker-group" class="date col-md-10" data-date-format="dd/mm/yyyy">
                    @Html.TextBoxFor(x => x.Date, new { type = "date", @class = "form-control" })
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                </div>
                <span class="text-danger" asp-validation-for="Date"></span><br />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>
                <span class="text-danger" asp-validation-for="Username"></span><br />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Project, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Project, new { @class = "form-control" })
                </div>
                <span class="text-danger" asp-validation-for="Project"></span><br />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                </div>
                <span class="text-danger" asp-validation-for="Description"></span><br />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.HoursWorked, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.HoursWorked, new {style="width: 250px", type = "number", @class = "form-control"
                })
            </div>
            <span class="text-danger" asp-validation-for="HoursWorked"></span><br />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a type="button" class="btn btn-outline-secondary" asp-action="Index">Back</a>
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </div>
                }
    </div>
</div>